@model Equipe
@{
    ViewData["Title"] = "Equipes";
}

<form method = "POST" action='@Url.Action("Cadastrar")' enctype = "multipart/form-data">
    <label>ID</label>
    <input type= "text" name= "IdEquipe" />
    
    <label>Nome</label>
    <input type= "text" name= "Nome" />

    <label>Imagem</label>
    <input type = "file" name= "Imagem" />

    <button type= "Submit">Cadastrar</button>
</form>

<table class ="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Imagem</th>
    </thead>
    <tbody>
        @foreach(Equipe equipe in ViewBag.Equipes)
        {
            <tr>
                <td>@equipe.IDEquipe</td>
                <td>@equipe.Nome</td>
                <td><img src = "/img/Equipes/@equipe.Imagem" alt="imagem da equipe @equipe.Nome" width="50"></td>
                <td><a asp-area="Link para excluir uma equipe" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IDEquipe">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>